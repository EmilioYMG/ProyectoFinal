<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtIdPadre"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:hint="Ingrese el id"
                android:layout_gravity="left"/>

            <Button
                android:id="@+id/btnBuscarPadre"
                android:layout_width="171sp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:backgroundTint="@color/purple_200"
                android:text="Buscar" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtNombrePadre"
            android:hint="Ingrese el nombre"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtEmailPadre"
            android:hint="Ingrese el e-mail"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtTelefonoCasaPadre"
            android:hint="Ingrese el telefono (casa)"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtTelefonoCelPadre"
            android:hint="Ingrese el telefono (celular)"/>
        <Button
            android:id="@+id/btnIngresarPadre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Verde"
            android:text="Agregar" />

        <Button
            android:id="@+id/btnEditarPadre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:text="Editar" />

        <Button
            android:id="@+id/btnEliminarPadre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/rojo"
            android:text="Eliminar" />

        <Button
            android:id="@+id/btnResetPadre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Gris"
            android:text="Reset" />


    </LinearLayout>

</LinearLayout>